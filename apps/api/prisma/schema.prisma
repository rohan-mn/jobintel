generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}


datasource db {
  provider = "postgresql"
}

model JobPost {
  id          String   @id @default(cuid())
  source      String
  sourceJobId String?
  title       String
  company     String?
  location    String?
  url         String
  postedAt    DateTime?
  createdAt   DateTime @default(now())

  @@unique([source, url])
}
